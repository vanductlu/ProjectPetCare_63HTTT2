<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3b75df"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:id="@+id/imageButtonBack"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#3b75df"
            app:srcCompat="@drawable/leftarrow" />

        <TextView
            android:id="@+id/hospital_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Phòng khám"
            android:textAlignment="center"
            android:textColor="#c9e6f8"
            android:textSize="19dp"
            android:typeface="normal" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/anhbacsi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Triệu chứng:"
            android:textSize="17dp"
            android:typeface="sans" />

        <EditText
            android:id="@+id/editTextSick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round"
            android:padding="10dp"
            android:drawableLeft="@drawable/baseline_dew_point_24"
            android:hint=" Triệu chứng, thuốc đang dùng, tiền sử..." />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Ngày khám"
            android:textSize="17dp"
            android:typeface="sans" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round"
            android:padding="10dp"
            android:drawableLeft="@drawable/baseline_calendar_month_24"
            android:clickable="true"
            android:focusable="false"
            android:hint=" Chọn ngày" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Giờ khám"
            android:textSize="17dp"
            android:typeface="sans" />

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:background="@drawable/round"
            android:padding="10dp"
            android:drawableLeft="@drawable/alarm_24"
            android:focusable="false"
            android:hint=" Chọn giờ" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Loại thú nuôi:"
            android:textSize="17dp"
            android:typeface="sans" />

        <EditText
            android:id="@+id/editTextPet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round"
            android:drawableLeft="@drawable/baseline_egg_24"
            android:padding="10dp"
            android:hint=" Chó,mèo,cá..." />
    </LinearLayout>

    <Button
        android:id="@+id/buttonSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3b75df"
        android:text="Tiếp tục"/>

</LinearLayout>
