<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginTop="30dp"
    android:padding="16dp">
    <ImageButton
        android:id="@+id/imageButtonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back"
        android:background="@color/white"/>
    <TextView
        android:id="@+id/textViewJoinedGroups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh sách các nhóm đã tham gia"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>

    <ListView
        android:id="@+id/listViewJoinedGroups"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textViewJoinedGroups"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/buttonLeaveGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listViewJoinedGroups"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/black"
        android:layout_marginStart="240dp"
        android:layout_marginTop="-466dp"
        android:layout_marginBottom="418dp"
        android:text="Rời khỏi nhóm" />

</RelativeLayout>