<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3D2D2"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="-30dp"
        android:padding="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P"
                    android:textSize="40dp"
                    android:textColor="#7A7A7A"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="et."
                    android:textSize="40dp"/>

            </LinearLayout>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="240dp"
        android:src="@drawable/filter"/>
</LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="360dp"
        app:cardBackgroundColor="#FFEDDF"
        app:cardCornerRadius="40dp"
        android:layout_margin="45dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/wkd"
            android:padding="10dp"
            android:layout_marginTop="70dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Your Favorite Pet"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#7A766A"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close To You"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="19dp"
            />

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_marginTop="-20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adopt a"
        android:layout_marginLeft="30dp"
        android:textSize="40dp"
        android:textColor="#1B1B1B"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Duck"
        android:layout_marginLeft="30dp"
        android:textSize="40dp"
        android:textColor="#1B1B1B"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_marginLeft="30dp"
                app:cardBackgroundColor="#EB9A57" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                app:cardBackgroundColor="#E4E4E4"
                app:cardCornerRadius="100dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                app:cardBackgroundColor="#E4E4E4"
                app:cardCornerRadius="100dp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/getstarted"
            android:layout_width="126dp"
            android:layout_height="60dp"
            android:layout_marginLeft="120dp"
            android:backgroundTint="@color/black"
            android:text="Get Started"
            android:textSize="15dp"
            app:cornerRadius="10dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</LinearLayout>