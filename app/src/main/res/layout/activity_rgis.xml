<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acitivy.rgis">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Acitivy.Lgin">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="889dp"
            android:orientation="vertical"
            android:background="@color/white">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:src="@drawable/image_rg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hãy điền thông tin đăng ký"
                android:textAlignment="center"
                android:textSize="24dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="20dp"
                    android:text="Email"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtrgemail"
                    android:layout_width="390dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round"
                    android:paddingLeft="10dp"
                    android:hint="Email" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="20dp"
                    android:text="Họ và Tên"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtrgfullname"
                    android:layout_width="390dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round"
                    android:paddingLeft="10dp"
                    android:hint="Fullname" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="20dp"
                    android:text="Số điện thoại"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtrgphone"
                    android:layout_width="390dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round"
                    android:paddingLeft="10dp"
                    android:hint="Số điện thoại" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Mật khẩu"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtrgpass"
                    android:layout_width="390dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:hint="******" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Xác nhận mật khẩu"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtrgcfpass"
                    android:layout_width="390dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round"
                    android:hint="******"
                    android:paddingLeft="10dp"
                    android:inputType="textPassword"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbtemp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="22dp"
                    android:background="#b7957c"


                    android:backgroundTint="#E1DCDC" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:text="Tôi đồng ý với các điều khoản và điều kiện của dịch vụ"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btnregis"
                    android:layout_width="233dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="84dp"
                    android:backgroundTint="@color/black"
                    android:text="Đăng ký"
                    android:textSize="18dp"
                    android:textAlignment="center" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="Đã có tài khoản ?"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtlgin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Đăng nhập"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
</ScrollView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>